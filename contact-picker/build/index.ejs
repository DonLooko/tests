        <script type="text/javascript" src="/local-env.js"></script>

        <style>
          body {
            background: #fff;
            padding: 20px;
            display: flex;
            align-items: flex-start;
            justify-content: space-around;
          }

          .app {
            display: flex;
            flex-direction: column;
            align-items: center;
          }

          .container {
            margin-top: 20px;

            display: flex;
            flex-direction: row;
            justify-content: space-around;
          }
        </style>
    </head>

<body style="display: flex; flex-direction: column; align-items: center">

<div class="app">
    <h1>Contact Picker</h1>

    <div class="container">
        <div id="contact-picker"></div>
    </div>
</div>

<div id="contact-picker-sidebar"></div>

<div id="rootModal"></div>

<script>
  window.pdffiller = 'en';
  window.user = {
    userId: localEnv.LOCAL_USER_ID,
    token: localEnv.LOCAL_USER_TOKEN
  };
  window.EXPERIMENTS = localEnv.LOCAL_EXPERIMENTS;
  window.frontendConfigUrls = {
    "system": {
      "baseUrl": `https://${localEnv.LOCAL_BACKEND}.pdffillers.com`,
    },
    "api": {
      "baseUrl": `https://${localEnv.LOCAL_BACKEND}.pdffillers.com/api_v3`,
      "appKey": localEnv.LOCAL_APP_KEY,
      federatedSearchUrl: 'https://federated-search.pdffillers.com/api/search/v1',
    },
  };
</script>
</body>
</html>
