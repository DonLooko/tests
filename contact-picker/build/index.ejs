<!doctype html>
<html>
<head>
    <head>
        <% const static_css = 'static-ak.pdffiller.com'; %>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1 user-scalable=no">
        <meta name="format-detection" content="telephone=no">

        <title>Address book App</title>
        <link rel="apple-touch-icon" href="//static.pdffiller.com/img/apple-touch-icon.png">
        <link rel="shortcut icon" sizes="16x16 24x24 32x32 48x48 64x64" href="//static.pdffiller.com/img/favicon.ico"/>

        <script src="https://static.pdffiller.com/js/vendors/modernizer.js"></script>
        <link rel="stylesheet" href="https://<%= static_css %>/css/style.css">
        <link rel="stylesheet" href="https://<%= static_css %>/components/new-address-book/build.css">
        <link rel="stylesheet" href="http://<%= static_css %>/components/combine-modal/cm/build.css">
